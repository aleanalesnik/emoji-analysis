doctype html
html
    head
        meta(charset="utf-8")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title Emoji analysis
        link(rel="stylesheet" href="/css/fonts/fonts.css")
        link(rel="stylesheet" href="/css/bootstrap.css") 
        link(rel="stylesheet" href="/css/style.css")
        link(rel="icon" type="image/png" href="/images/icon.png" sizes="32x32")
    
    body
        header 
            div.navbar-wrapper
                nav.navbar.navbar-expand-lg.navbar-light.bg-light
                    div.container
                        a.navbar-brand(href="/")
                            strong(id="logo") EMOJI ANALYSIS
                        button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNavAltMarkup", aria-controls="navbarNavAltMarkup", aria-expanded="false", aria-label="Toggle navigation")
                            span.navbar-toggler-icon
                        div#navbarNavAltMarkup.collapse.navbar-collapse
                            div.navbar-nav.ml-auto
                                a.nav-item.nav-link.nav-coloring(href="/faq") FAQ
                                a.nav-item.nav-link.nav-coloring(href="/about") About
                                a.nav-item.nav-link.nav-coloring(href="/contact") Contact
                                if session
                                    i.nav-item.nav-link.nav-coloring #{session.firstname} #{session.lastname}
                                    a.btn.btn-success(role="button" href="/users/logout") Sign out
                                else
                                    a.btn.btn-success(role="button" data-toggle="modal" data-target="#login-overlay" aria-hidden="true") Sign in
        main
            
            block content

            include login-modal.pug

        footer
            footer
            div.footer-wrapper
                div.container
                    div.row
                        div.col-sm-12.col-md-4.col-lg-4
                            div
                                br
                                p.footerFont © 2017 Copyright: Emoji Analysis
                        div.col-12.col-md-3.col-lg-4
                            div
                                br
                                a.footerFont(href="/faq") FAQ
                                br
                                a.footerFont(href="/about") About Us
                                br
                                a.footerFont(href="/contact") Contact
                        div.col-12.col-md-3.col-lg-4
                            div
                                br
                                p.footerFont NYCDA
                                p.footerFont JavaScript Intensive
                                p.footerFont Fall 2017

            //- div.footer-bottom
            //-     p © 2017 Copyright: Emoji Analysis

    
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js')
    script(src='./js/bootstrap.js')
    script(src="./js/main.js")
